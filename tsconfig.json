{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@constants": [
        "src/constants"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@actions": [
        "src/store/actions"
      ],
      "@selectors": [
        "src/store/selectors"
      ],
      "@types": [
        "src/store/types"
      ],
      "@state": [
        "src/store/state"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
